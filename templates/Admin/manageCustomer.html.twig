<div class='col'>
    <div class="card">
                <h5 class="card-header">User(s)</h5>
                <div class="table" style="overflow:auto;">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    {% for user in users %}
                         <tr>
                        <td>{{user.id}}</td>
                        <td><strong>{{user.firstname}}</strong></td>
                        <td>{{user.lastname}}</td>
                        <td>{{user.email}}</td>
                        <td>
                            <strong>
                                {% if user.roles.0 == 1 %}Admin{% endif %}
                                {% if user.roles.0 == 'ROLE_USER' %}User{% endif %}
                            </strong>
                        </td>
                        <td>
                            {% if user.isVerified == 1 %}<span class="badge bg-label-success me-1">Verified</span></td>{% endif %}
                            {% if user.isVerified == 0 %}<span class="badge bg-label-danger me-1">No Verified</span></td>{% endif %}
                            
                        <td>
                          <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                              <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                              <a class="dropdown-item" href="javascript:void(0);"
                                ><i class="bx bx-edit-alt me-1"></i> Edit</a
                              >
                              <a class="dropdown-item" href="{{path('setting.deleteCustomer',{id:app.user.id})}}">
                                <i class='me-2 bx bx-user-x'></i>
                                <div "Container">Delete account</div>
                              </a>
                            </div>
                          </div>
                        </td>
                      </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
</div>